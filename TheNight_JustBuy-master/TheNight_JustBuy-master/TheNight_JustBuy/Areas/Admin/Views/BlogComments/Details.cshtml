@model TheNight_JustBuy.Models.BlogComment

@{
    ViewBag.Title = "Blog Comment Detail";
    ViewBag.Function = "BlogComments";
    ViewBag.ChildFunction = "Blog Comment Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="card">
        <div class="card-header">
            <h1 style="font-weight:bold; font-size:25px;" class="card-title">Detail of Blog Comment</h1>
            <div class="card-tools">
                    <a class="btn btn-block btn-secondary float-right" href="~/Admin/BlogComments">Back to List</a>

            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12 order-12 order-md-12">
                    <div class="row">
                        <div class="col-12">

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.CommentID)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.CommentID)
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.Blog.BlogName)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.Blog.BlogName)
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.User.Username)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.User.Username)
                                </p>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.Content)</strong>:
                                </div>
                                <div class="col-sm-10">
                                    @Html.Raw(Model.Content)
                                </div>
                            </div>

                            <div class="post">
                                <div class="col-sm-2 user-block">
                                    <strong>@Html.DisplayNameFor(model => model.CreatedDate)</strong>:
                                </div>
                                <p class="col-sm-10">
                                    @Html.DisplayFor(model => model.CreatedDate)
                                </p>
                            </div>
                        <div class="post">
                            <div class="col-sm-2 user-block">
                                <strong>@Html.DisplayNameFor(model => model.Status)</strong>:
                            </div>
                            <p class="col-sm-10">
                                @Html.DisplayFor(model => model.Status)
                            </p>

                        </div>


                        </div>
                    </div>
                </div>

            </div>
        </div>
        </div>
</section>