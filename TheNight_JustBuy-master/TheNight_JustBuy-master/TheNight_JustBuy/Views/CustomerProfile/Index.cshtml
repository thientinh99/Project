@model TheNight_JustBuy.Areas.Admin.Models.UserModelForEdit

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Hero Section-->
<div class="hero-section hero-background">
    <h1 class="page-title">Organic Fruits</h1>
</div>

<!--Navigation section-->
<div class="container">
    <nav class="biolife-nav">
        <ul>
            <li class="nav-item"><a href="index-2.html" class="permal-link">Home</a></li>
            <li class="nav-item"><span class="current-page">Profile</span></li>
        </ul>
    </nav>
</div>

<div class="page-contain login-page">

    <!-- Main content -->
    <div id="main-content" class="main-content">
        <div class="container">

            <div class="row">
                <h4 style="color:blue">@ViewBag.Mess</h4>
                <!--Form Sign In-->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h3 style="color:green">Update personal information</h3>
                    <div class="signin-container">
                        @using (Html.BeginForm("Index", "CustomerProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <p class="form-row">
                                @Html.LabelFor(model => model.FirstName)
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "txt-input" } })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </p>
                            <p class="form-row">
                                @Html.LabelFor(model => model.LastName)
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "txt-input" } })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </p>
                            <p class="form-row">
                                @Html.LabelFor(model => model.CreditCard)
                                @Html.EditorFor(model => model.CreditCard, new { htmlAttributes = new { @class = "txt-input" } })
                                @Html.ValidationMessageFor(model => model.CreditCard, "", new { @class = "text-danger" })
                            </p>

                            <p class="input-group">
                                @Html.RadioButtonFor(model => model.Gender, true, new { Checked = "checked" })
                                <span>Male</span>&emsp;&emsp;
                                @Html.RadioButtonFor(model => model.Gender, false)
                                <span>Female</span>
                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                            </p>
                            <p class="form-row">
                                @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "txt-input oso", @type = "date" } })
                                @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })

                            </p>
                            <p class="form-row">
                                @Html.LabelFor(model => model.Phone)
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "txt-input" } })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                            </p>
                            <p class="form-row">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "txt-input", @id = "txtEmail" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                            </p>
                            <p class="form-row">
                                <label for="file" class="fName">
                                    Select your avatar
                                </label>
                                <input type="file" required id="file" class="file" name="EditedImage">
                                @Html.ValidationMessageFor(model => model.EditedImage, "", new { @class = "text-danger" })
                            </p>


                            <p class="form-row wrap-btn">
                                <button class="btn btn-submit btn-bold" type="submit">Update</button>
                                <a href="#" class="link-to-help">Forgot your password</a>
                            </p>
                        }
                    </div>
                </div>

                <!--Go to Register form-->
                

            </div>

        </div>

    </div>

</div>


