{# Kế thừa layout frontend #}
{% extends "frontend/layouts/layout.html.twig" %}
{% block customstyles %}
    
<style>
    .noidung_cauhoi{
       
        margin-bottom: 55px;
    }
    .coltrai, .colphai{
        color: white;
        width: 100%;
        height: 200px;
    }
    .col-md-6.coltrai {
        
        background-color: #00363d;
    }
    .coltrai h1.text-center {
        position: relative;
        top: 80px;
        left: 0;
    }
    .col-md-6.colphai {
    
        background-color: #77a300;
    }
    .colphai button.icon_search {
        position: absolute;
        top: 0px;
        right: 0;
        color: #77a300;
        background: #00363d;
        border: solid #00363d;
    }
    .colphai .tieude_timnhanh, .colphai .noidung_timnhanh {
        position: relative;
        text-align: left;
        top: 80px;
        left: 0;
    }

    .nd_khoi_kh ul li{
        font-size: 16px;
        font-weight: bold;
        list-style: none;
    }
    .nd_khoi_kh ul li a {
        text-decoration: none;
        font-size: 16px;
        color: #00363d;
        font-weight: bold;
    }
    .nd_khoi_kh ul li:hover >a{
        color:#77a300;
        
    }


    .dm_cauhoi {
        position: relative;
        top: 30px;
        left: 0;
        z-index: 1;
        box-sizing: border-box;
        box-shadow: 0 4px 8px 2px rgba(18, 18, 18, 0.06);
        padding: 5px 15px;
    }

    .dm_traloi {
        position: relative;
        top: 30px;
        left: 0;
        z-index: 2;
        box-sizing: border-box;
        box-shadow: 0 4px 8px 2px rgba(18, 18, 18, 0.06);
        padding: 5px 15px;
    }

    .khoi_kh h3.xanhden {
    
        background: url(../img/cau-hoi/arrow_up.png) no-repeat 96% #00363d;
    }

    .khoi_kh h3{
        background: url(../img/cau-hoi/arrow_down.png) no-repeat 96% #77a300;
        color: white;
        padding: 5px 20px;
        border-radius: 5px;
    }

    .khoi_traloi h5.xanhden {
    
        background: url(../img/cau-hoi/arrow_up.png) no-repeat 96% #00363d;
    }

    .khoi_traloi h5{
        background: url(../img/cau-hoi/arrow_down.png) no-repeat 96% #77a300;
        color: white;
        padding: 5px 20px;
        border-radius: 5px;
    }
</style>

{% endblock %}
