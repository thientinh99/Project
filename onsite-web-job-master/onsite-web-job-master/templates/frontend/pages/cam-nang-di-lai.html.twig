{# Kế thừa layout frontend #}
{% extends 'frontend/layouts/layout.html.twig' %}

{# Nội dung trong block title #}
{% block title %}
  Cẩm nang đi lại
{% endblock %}
{# End Nội dung trong block title #}

{% block content %}
  <div class="container py-5">
    <input id="input-search" class="form-control" placeholder="Tìm kiếm bài viết">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#home">Tất cả</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu1" >Tiện ích hay</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu2">Cẩm nang du lịch</a>
      </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content " >
      <div class="tab-pane container active" id="home">
        <div class="row row-cols-1 row-cols-lg-3">
          {% for news in newsList %}
            <div class="col my-3">
              <div class="card h-100 shadow-sm">
                <img src="/assets/img/utility/{{ news.name }}.jpg" alt="" class="card-img-top">
                <div class="card-body">
                  <h7 class="mx-auto bg-warning" style="width:150px">{{ news.category }}</h7>
                  <h5 class="card-title">{{ news.title }}</h5>
                  <p class="card-text">{{ news.shortContent }}</p>
                </div>
                <div class="card-footer text-center">
                  <a href="#">Xem thêm</a>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>                                        
      </div>
      <div class="tab-pane container fade" id="menu1">
        <div class="row row-cols-1 row-cols-lg-3">
          {% for news in mang2 %}
            <div class="col my-3">
              <div class="card h-100 shadow-sm">
                <img src="/assets/img/utility/{{ news.name }}.jpg" alt="" class="card-img-top">
                <div class="card-body">
                  <h7 class="mx-auto bg-success" style="width:150px">{{ news.category }}</h7>
                  <h5 class="card-title">{{ news.title }}</h5>
                  <p class="card-text">{{ news.shortContent }}</p>
                </div>
                <div class="card-footer text-center">
                  <a href="#">Xem thêm</a>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>     
      </div>
      <div class="tab-pane container fade" id="menu2">
        <div class="row row-cols-1 row-cols-lg-3">
          {% for news in mang3 %}
            <div class="col my-3">
              <div class="card h-100 shadow-sm">
                <img src="/assets/img/utility/{{ news.name }}.jpg" alt="" class="card-img-top">
                <div class="card-body">
                  <h7 class="mx-auto bg-info" style="width:150px">{{ news.category }}</h7>
                  <h5 class="card-title">{{ news.title }}</h5>
                  <p class="card-text">{{ news.shortContent }}</p>
                </div>
                <div class="card-footer text-center">
                  <a href="#">Xem thêm</a>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

    </div>
    <ul class="pagination mt-4 justify-content-center">
            <li class="page-item"><a class="page-link" href="#"><i class="fas fa-angle-double-left"></i></a></li>
            <li class="page-item"><a class="page-link" href="#"><i class="fas fa-angle-left"></i></a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#"><i class="fas fa-angle-right"></i></a></li>
            <li class="page-item"><a class="page-link" href="#"><i class="fas fa-angle-double-right"></i></a></li>
          </ul>
  </div>
{% endblock %}
