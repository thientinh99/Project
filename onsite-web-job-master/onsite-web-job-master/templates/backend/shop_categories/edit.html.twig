{# Nội dung trong block headline #}
{% block headline %}
Sửa Loại sản phẩm
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<form name="frmLoaiSanPham" id="frmLoaiSanPham" method="post" action="/backend/shop_categories/edit.php?category_code={{ shop_categories.category_code }}">
    <div class="form-group">
        <label for="lsp_ma">Mã loại sản phẩm</label>
        <input type="text" class="form-control" id="category_code" name="category_code" placeholder="Mã loại sản phẩm" readonly value="{{ shop_categories.category_code }}">
        <small id="category_code_help" class="form-text text-muted">Mã loại sản phẩm không được hiệu chỉnh.</small>
    </div>
    <div class="form-group">
        <label for="category_name">Tên loại sản phẩm</label>
        <input type="text" class="form-control" id="category_name" name="category_name" placeholder="Tên loại sản phẩm" value="{{ shop_categories.category_name }}">
    </div>
    <div class="form-group">
        <label for="description">Mô tả loại sản phẩm</label>
        <input type="text" class="form-control" id="description" name="description" placeholder="Mô tả loại sản phẩm" value="{{ shop_categories.description }}">
    </div>
    <button class="btn btn-primary" name="btnSave">Cập nhật</button>
</form>
{% endblock %}
{# End Nội dung trong block content #}